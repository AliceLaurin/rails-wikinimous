<div class="container">
  <div class="mt-5 mb-5">
    <h1 class="m-3"> <%= @article.title %> </h1>
  </div>

  <div class="row">
    <div class="col-8 d-flex justify-content-start m-3">
      <p> <%= @article.content %> </p>
    </div>
  </div>

  <div class="d-flex justify-content-start">
    <%= link_to "Modifier l'article", edit_article_path, class: "my-button rounded text-decoration-none p-3 m-3" %>
    <%= link_to "Supprimer l'article", article_path(@article),class: "my-button rounded text-decoration-none p-3 m-3",
      data: {turbo_method: :delete, turbo_confirm: "Vous êtes sûr?"} %>
    <%= link_to "Retour à la liste", articles_path, class: "my-button rounded text-decoration-none p-3 m-3" %>

  </div>
</div>
